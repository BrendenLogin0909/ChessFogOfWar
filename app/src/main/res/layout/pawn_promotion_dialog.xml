<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/black_square">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Promote Pawn"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@color/primary_dark"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Queen Option -->
        <LinearLayout
            android:id="@+id/queenOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@color/white_square">

            <TextView
                android:id="@+id/queenSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="♛"
                android:textSize="48sp"
                android:textColor="@color/black_piece"
                android:shadowColor="@color/black_piece"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Queen"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Rook Option -->
        <LinearLayout
            android:id="@+id/rookOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@color/black_square">

            <TextView
                android:id="@+id/rookSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="♜"
                android:textSize="48sp"
                android:textColor="@color/black_piece"
                android:shadowColor="@color/black_piece"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rook"
                android:textSize="14sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Bishop Option -->
        <LinearLayout
            android:id="@+id/bishopOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@color/white_square">

            <TextView
                android:id="@+id/bishopSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="♝"
                android:textSize="48sp"
                android:textColor="@color/black_piece"
                android:shadowColor="@color/black_piece"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bishop"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Knight Option -->
        <LinearLayout
            android:id="@+id/knightOption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@color/black_square">

            <TextView
                android:id="@+id/knightSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="♞"
                android:textSize="48sp"
                android:textColor="@color/black_piece"
                android:shadowColor="@color/black_piece"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Knight"
                android:textSize="14sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 