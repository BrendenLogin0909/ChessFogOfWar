<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkmate Tests"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic Checkmate Patterns"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_scholars_mate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scholar's Mate"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_legals_mate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Legal's Mate"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_smothered_mate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smothered Mate"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_back_rank_mate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back Rank Mate"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advanced Checkmate Patterns"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_anastasia_mate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anastasia's Mate"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_arabia_mate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arabian Mate"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_two_rooks_mate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Two Rooks Mate"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_two_queens_mate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Two Queens Mate"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout> 