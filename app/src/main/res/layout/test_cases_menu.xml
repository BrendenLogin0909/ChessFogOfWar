<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Scenarios"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_castling_tests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CASTLING TESTS"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_en_passant_tests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EN PASSANT TESTS"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_promotion_tests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROMOTION TESTS"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_checkmate_tests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHECKMATE TESTS"
        android:layout_marginBottom="16dp" />

</LinearLayout> 